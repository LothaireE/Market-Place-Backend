{
    "name": "marketplace-api",
    "version": "1.0.0",
    "description": "An api in Node JS with Typescript.",
    "main": "src/mainServer.ts",
    "scripts": {
        "test": "NODE_ENV=test jest --config jest.config.ts --coverage",
        "build": "rm -rf build/ && tsc -p tsconfig.build.json",
        "dev": "NODE_ENV=development nodemon --watch src --exec ts-node src/mainServer.ts",
        "devAuth": "NODE_ENV=development nodemon --watch src --exec ts-node src/authServer.ts",
        "start": "NODE_ENV=production node build/mainServer.js",
        "startAuth": "NODE_ENV=production node build/authServer.js",
        "dev:all": "concurrently \"npm:dev\" \"npm:devAuth\"",
        "codegen": "graphql-codegen --config codegen.config.ts"
    },
    "author": "Lothaire",
    "license": "",
    "dependencies": {
        "@apollo/server": "^5.0.0",
        "@as-integrations/express5": "^1.1.2",
        "@graphql-tools/load-files": "^7.0.1",
        "@graphql-tools/schema": "^10.0.25",
        "bcrypt": "^6.0.0",
        "dotenv": "^17.2.0",
        "drizzle-kit": "^0.31.4",
        "drizzle-orm": "^0.44.3",
        "express": "^5.1.0",
        "graphql": "^16.11.0",
        "graphql-http": "^1.22.4",
        "graphql-tools": "^9.0.20",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.16.3"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "5.0.7",
        "@graphql-codegen/typescript": "4.1.6",
        "@graphql-codegen/typescript-resolvers": "4.5.1",
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.0.15",
        "@types/pg": "^8.15.4",
        "@types/supertest": "^6.0.3",
        "concurrently": "^9.2.0",
        "jest": "^30.0.4",
        "supertest": "^7.1.3",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    }
}
