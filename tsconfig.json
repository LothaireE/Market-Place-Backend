{
    "compilerOptions": {
        "target": "es2016",
        "module": "node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "outDir": "build",
        "types": ["jest"],
        "isolatedModules": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
